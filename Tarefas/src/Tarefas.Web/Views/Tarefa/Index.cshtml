@model IEnumerable<Tarefas.Web.Models.TarefaViewModel>

<h3>INDEX</h3>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>@Html.DisplayNameFor(model => model.Concluida)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Descricao</td>
                <td> <partial name="_Status" model="item"> </td>
                <td style="width: 10px; white-space; nowrap;">
                    <a asp-controller="Tarefa" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-controller="Tarefa" asp-action="Update" asp-route-id="@item.Id">Uptade</a>
                    <a asp-controller="Tarefa" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>


